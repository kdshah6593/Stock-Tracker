<h1><%= @watchlist.title %></h1>

<table>
    <tr>
        <th>Name</th>
        <th>Symbol</th>
        <th>Sector</th>
    </tr>
    <% @watchlist.stocks.each do |stock| %>
        <tr>
            <td><%= stock.name %></td>
            <td><%= stock.symbol %></td>
            <td><%= stock.sector %></td>
        </tr>
    <% end %>
</table>

<%= link_to "Edit Watchlist", edit_user_watchlist_path(current_user, @watchlist) %>
<%= button_to "Delete Watchlist", user_watchlist_path(current_user, @watchlist), method: :delete %>

<%= form_for @stock_watchlist, url: submit_stock_path(@watchlist) do |f| %>
    <%= f.hidden_field :watchlist_id %>
    <%= f.label :stock, "Add a New Stock" %>
    <%= f.collection_select(:stock_id, Stock.all, :id, :name, {include_blank: 'Select a Stock'})%>
    <%= f.submit "Add" %>
<% end %>