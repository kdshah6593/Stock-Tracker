<h1>S&P 500 Stock List</h1>

<%= form_tag(stocks_sector_path, method: :get) do %>
    <%= label_tag("Filter by Sector: ")%>
    <%= select_tag(:sector, options_for_select(Stock.list_of_sectors), {:include_blank => "Select Sector"}) %>
    <%= submit_tag ("Filter") %>
<% end %>

<table>
    <tr>
        <th>Name</th>
        <th>Symbol</th>
        <th>Sector</th>
    </tr>
    <% @stocks.each do |stock| %>
        <tr>
            <td><%= link_to stock.name, stock_path(stock) %></td>
            <td><%= stock.symbol %></td>
            <td><%= stock.sector %></td>
        </tr>
    <% end %>
</table>