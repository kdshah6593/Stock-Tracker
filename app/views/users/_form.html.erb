<%= form_for(user, html: {class: "signup-form"}) do |f| %>

    <%= f.label :first_name, class: "sr-only"  %>
    <%= f.text_field :first_name, class: "form-control", placeholder: "First Name", required: true %><br>


    <%= f.label :last_name, class: "sr-only"  %>
    <%= f.text_field :last_name, class: "form-control", placeholder: "Last Name", required: true %><br>


    <%= f.label :username, class: "sr-only"  %>
    <%= f.text_field :username, class: "form-control", placeholder: "Username", required: true %><br>


    <%= f.label :password, class: "sr-only"  %>
    <%= f.password_field :password, class: "form-control", placeholder: "Password", required: true %><br>


    <%= f.label :email, class: "sr-only"  %>
    <%= f.text_field :email, class: "form-control", placeholder: "Email Address", required: true %><br>
    <br>

    <%= f.submit "Sign Up", class: "btn btn-lg btn-primary" %>
<% end %>
